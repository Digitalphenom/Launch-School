<div>
  <h2>Edit content of <%= @filename %></h1>
    <div class=textarea>
      <form action="/<%= @filename %>" method="post" name="user_input">
        <textarea name="content" id="content" cols="50" rows="20" placeholder="Edit here"><%= @content %></textarea>
        <br>
        <input type="submit" name="input" value="Save Changes"></input>
      </form>
    </div>
  </div>
</div>