<h2 class="content-subhead">Table of Contents</h2>

<div class="pure-menu">
  <ul class="pure-menu-list">
    <% @toc_contents.each_line.with_index(1) do |chapter, i| %>
      <li class="pure-menu-item">
        <a href="/chapter/<%= i %>" class="pure-menu-link"><%= chapter %></a>
      </li>
    <% end %>
  </ul>
</div>