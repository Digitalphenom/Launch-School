<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Interest App</title>
    <link rel="stylesheet" href="/stylesheets/pure-min.css">
    <link rel="stylesheet" href="/stylesheets/fonts.css">
    <link rel="stylesheet" href="/stylesheets/book_viewer.css">
  </head>
  <body>
    <div id="layout">
      <a href="#menu" id="menuLink" class="menu-link"><span></span></a>
      <div id="menu">
        <div class="pure-menu">
          <a class="pure-menu-heading" href="/">Users</a>
          <% @user_names.each do |name| %>
            <ul class="pure-menu-list">
              <li class="pure-menu-item">
                <a href="/<%= "#{name}" %>"class="pure-menu-link"><%= "#{name}" %></a>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
        <div id="main">
          <%= yield %>
        </div>
      </div>
    <script type="text/javascript" src="javascripts/ui.js"></script>
  </body>
</html>